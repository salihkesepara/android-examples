<resources>

  <!-- Base application theme. -->
  <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
  </style>

  <style name="LinearLayout">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">match_parent</item>
    <item name="android:orientation">vertical</item>
    <item name="android:layout_marginTop">20dp</item>
    <item name="android:gravity">center_horizontal</item>
  </style>

  <style name="LoginButtonsLayout">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:orientation">horizontal</item>
  </style>

  <style name="TextView">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
  </style>
  
  <style name="TextView.title">
    <item name="android:textSize">30dp</item>
    <item name="android:textColor">@color/txtTitle</item>
    <item name="android:background">@color/colorBlack</item>
  </style>

  <style name="EditText">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:ems">13</item>
    <item name="android:state_single">true</item>
    <item name="android:inputType"></item>
  </style>

  <style name="EditText.UserName">
    <item name="android:hint">@string/user_name</item>
  </style>

  <style name="EditText.Password">
    <item name="android:hint">@string/user_password</item>
    <item name="android:inputType">textPassword</item>
  </style>

  <style name="Button">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
  </style>

  <style name="Button.Login">
    <item name="android:text">@string/login</item>
  </style>

  <style name="Button.Cancel">
    <item name="android:text">@string/cancel</item>
  </style>

</resources>
